<div class="d-flex flex-direction-column justify-content-center align-items-center">
  <h2>Состав:</h2>
</div>
<br>

<div class="d-flex flex-direction-column justify-content-center align-items-center"></div>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Игрок:</th>
      <th scope="col">Номер:</th>
      <th scope="col">Позиция:</th>
      <th scope="col">Рост:</th>
      <th scope="col">Вес:</th>
      <th scope="col">Дата рождения:</th>
      <th scope="col">Страна:</th>
      <th scope="col">В NBA с:</th>
    </tr>
  </thead>
  <tbody>{{#each teamPlayers}}
    <tr class="table-active">

      <td> <a href="/player/stat/{{this.personId}}"> {{this.firstName}} {{this.lastName}}</a></td>
      <td>{{this.jersey}}</td>
      <td>{{this.pos}}</td>
      <td>{{this.heightMeters}} метров</td>
      <td>{{this.weightKilograms}} кг</td>
      <td>{{this.dateOfBirthUTC}}</td>
      <td>{{this.country}}</td>
      <td>{{this.nbaDebutYear}}</td>
      {{/each}}
    </tr>
  </tbody>
</table>

