      <th scope="col">Процент с игры:</th>
      <th scope="col">Лучший проценты трехочковых:</th>
      <th scope="col">Процент с трехочковых:</th>
    </tr>
  </thead>
  <tbody>
    <tr class="table-active">
      <td><a href="/player/stat/{{leaders.ppg.personId}}">{{leaders.ppg.name}}</a></td>
      <td>{{leaders.ppg.value}}</td>
      <td><a href="/player/stat/{{leaders.apg.personId}}">{{leaders.apg.name}}</a></td>
      <td>{{leaders.apg.value}}</td>
